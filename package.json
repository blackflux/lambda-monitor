{
  "name": "lambda-monitor",
  "version": "0.0.0-development",
  "description": "Automatically configure lambda log analysis and popagation to external services.",
  "main": "lib/handler.js",
  "scripts": {
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-artifact && npm run clean-build && npx semantic-release",
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --source-maps inline --copy-files --include-dotfiles",
    "clean-build": "npm run clean && npm run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "gardener": "node gardener",
    "build-artifact": "npm run clean-build && tar -zxvf $(npm pack) && rm *-0.0.0-development.tgz && cd package && tar -zcvf ../release.tar.gz . && cd .. && rm -rf package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/lambda-monitor.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "monitor",
    "cloudwatch",
    "rollbar",
    "logz",
    "loggly",
    "logs",
    "monitoring",
    "alerts",
    "timeouts"
  ],
  "author": "Lukas Siemon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blackflux/lambda-monitor/issues"
  },
  "homepage": "https://github.com/blackflux/lambda-monitor#readme",
  "dependencies": {
    "aws-sdk": "2.412.0",
    "cfn-response": "1.0.1",
    "lambda-rollbar": "1.10.3",
    "lodash.defaults": "4.2.0",
    "lodash.difference": "4.5.0",
    "lodash.get": "4.4.2",
    "optimist": "0.6.1",
    "yaml-boost": "1.8.3",
    "request": "2.88.0",
    "request-promise": "4.2.4"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "nock": "10.0.6",
    "js-gardener": "1.37.6",
    "lambda-tdd": "2.1.2",
    "coveralls": "3.0.3",
    "mocha": "6.0.2",
    "semantic-release": "15.13.3",
    "nyc": "13.3.0",
    "@babel/cli": "7.2.3",
    "@babel/register": "7.0.0",
    "babel-eslint": "10.0.1",
    "@babel/core": "7.3.4",
    "@babel/plugin-transform-flow-comments": "7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.3.4",
    "@babel/preset-flow": "7.0.0"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/lambda-monitor/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">= 8.10"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {},
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*",
      "serverless.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
