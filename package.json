{
  "name": "lambda-monitor",
  "version": "0.0.0-development",
  "description": "Automatically configure lambda log analysis and popagation to external services.",
  "main": "lib/handler.js",
  "scripts": {
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run clean-build && semantic-release",
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --source-maps inline --copy-files --include-dotfiles",
    "clean-build": "npm run clean && npm run build",
    "test-simple": "nyc mocha --recursive",
    "gardener": "node gardener"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simlu/lambda-monitor.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "monitor",
    "cloudwatch",
    "rollbar",
    "logz",
    "loggly",
    "logs",
    "monitoring",
    "alerts",
    "timeouts"
  ],
  "author": "Lukas Siemon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simlu/lambda-monitor/issues"
  },
  "homepage": "https://github.com/simlu/lambda-monitor#readme",
  "dependencies": {
    "aws-sdk": "2.223.1",
    "cfn-response": "1.0.1",
    "lambda-rollbar": "1.9.1",
    "lodash.defaults": "4.2.0",
    "lodash.difference": "4.5.0",
    "lodash.get": "4.4.2",
    "optimist": "0.6.1",
    "yaml-boost": "1.3.1",
    "request": "2.85.0",
    "request-promise": "4.2.2"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "nock": "9.2.3",
    "js-gardener": "1.16.0",
    "lambda-tdd": "1.11.15",
    "coveralls": "3.0.0",
    "mocha": "5.0.5",
    "semantic-release": "15.1.5",
    "nyc": "11.6.0",
    "babel-cli": "7.0.0-beta.3"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/simlu/lambda-monitor/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">= 6.10.3"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {},
  "nyc": {
    "tempDirectory": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*",
      "serverless.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
