{
  "name": "lambda-monitor",
  "version": "0.0.0-development",
  "description": "Automatically configure lambda log analysis and popagation to external services.",
  "main": "lib/handler.js",
  "scripts": {
    "test": "npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-artifact && npx semantic-release",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "gardener": "node gardener",
    "build-artifact": "tar -zxvf $(npm pack) && rm *-0.0.0-development.tgz && cd package && tar -zcvf ../release.tar.gz . && cd .. && rm -rf package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/lambda-monitor.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "monitor",
    "cloudwatch",
    "rollbar",
    "logz",
    "loggly",
    "logs",
    "monitoring",
    "alerts",
    "timeouts"
  ],
  "author": "Lukas Siemon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blackflux/lambda-monitor/issues"
  },
  "homepage": "https://github.com/blackflux/lambda-monitor#readme",
  "dependencies": {
    "bluebird": "^3.5.2",
    "cfn-response": "1.0.1",
    "lambda-rollbar": "1.9.11",
    "lodash.defaults": "4.2.0",
    "lodash.difference": "4.5.0",
    "lodash.get": "4.4.2",
    "optimist": "0.6.1",
    "request": "2.88.0",
    "request-promise": "4.2.2",
    "yaml-boost": "1.7.4"
  },
  "devDependencies": {
    "aws-sdk": "2.343.0",
    "babel-eslint": "^10.0.1",
    "chai": "4.2.0",
    "coveralls": "3.0.2",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "js-gardener": "1.31.8",
    "lambda-tdd": "1.25.2",
    "mocha": "5.2.0",
    "nock": "10.0.1",
    "nyc": "13.1.0",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "semantic-release": "15.10.5"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/lambda-monitor/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">= 8.10"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {},
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*",
      "serverless.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ]
    }
  }
}
